{
  "$schema": "node_modules/lerna/schemas/lerna-schema.json",
  "useWorkspaces": true,
  "version": "independent",
  "npmClient": "pnpm",
  "conventionalCommits": true,
  "exact": true,
  "changelog": true,
  "packages": ["packages/*"],
  "command": {
    "version": {
      "allowBranch": ["main"],
      "message": "chore(release): publish"
    },
    "publish": {
      "npmClient": "npm"
    }
  }
}
